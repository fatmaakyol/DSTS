@using DSTS.localClass
@{
    ViewBag.Title = "OdayaDemirbasEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<localOda> lo = ViewBag.odalar;
    List<localFakulte> lf = ViewBag.fakulteler;
    List<localDemirbas> lda = ViewBag.demirbaslar;

}

<section class="content-header">
    <h1>
        Odaya Demirbaş Ekleme
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-home"></i> Anasayfa </a></li>
        <li><a href="#">Güncelleme İşlemleri</a></li>
        <li class="active">Odaya Demirbaş Ekleme</li>
    </ol>
</section>




<section class="content">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Odaya Demirbaş Ekleme</h3>
        </div>

        <form method="post" action="~/Kayit/OdayaDemirbasEkle" class="form-horizontal">
            <div class="box-body">

                <div class="form-group">
                    <label for="inputFakulte" class="col-sm-2 control-label">Fakülte </label>

                    <div class="col-sm-10">
                        <select id="inputFakulte" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            @foreach (localFakulte l in lf)
                            {
                                <option>@l.fakulteAdi</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputOda" class="col-sm-2 control-label">Oda </label>

                    <div class="col-sm-10">
                        <select name="odaAdi" id="inputOda" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            @foreach (localOda l in lo)
                            {
                                <option>@l.odaAdi</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputDB" class="col-sm-2 control-label">Demirbaş </label>

                    <div class="col-sm-10">
                        <select name="Demirbas" id="inputDB" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            @foreach (localDemirbas l in lda)
                            {
                                <option>@l.demirbasKod-@l.demirbasAdi-@l.demirbasMarka-@l.demirbasModel</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputDBAdet" class="col-sm-2 control-label">Demirbaş Adedi</label>

                    <div class="col-sm-10">
                        <input name="dbAdet" type="text" class="form-control" id="inputDBAdet" placeholder="Demirbaş Adedi">
                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">

                <button type="submit" class="btn btn-info pull-right">Odaya Demirbaşı Ekle</button>
                <button type="submit" class="btn btn-default">Geri Dön</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>

</section>

