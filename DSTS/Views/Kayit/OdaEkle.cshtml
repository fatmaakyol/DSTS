
@{
    ViewBag.Title = "OdaEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Oda Ekleme Sayfası

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-home"></i> Anasayfa </a></li>
        <li><a href="#">Kayıt İşlemleri</a></li>
        <li class="active">Oda Kaydı</li>
    </ol>
</section>




<section class="content">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Oda Ekleme</h3>
        </div>

        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputOdaAd" class="col-sm-2 control-label">Oda Adı</label>

                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputOdaAd" placeholder="Oda Adı">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputOdaSorumlu" class="col-sm-2 control-label">Oda Sorumlusu</label>

                    <div class="col-sm-10">
                        <select id="inputOdaSorumlu" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option selected="selected">Alabama</option>
                            <option>Alaska</option>
                            <option>California</option>
                            <option>Delaware</option>
                            <option>Tennessee</option>
                            <option>Texas</option>
                            <option>Washington</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputFakulte" class="col-sm-2 control-label">Eklenecek fakülte </label>

                    <div class="col-sm-10">
                        <select id="inputFakulte" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option selected="selected">Alabama</option>
                            <option>Alaska</option>
                            <option>California</option>
                            <option>Delaware</option>
                            <option>Tennessee</option>
                            <option>Texas</option>
                            <option>Washington</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputOda" class="col-sm-2 control-label">Eklenecek oda </label>

                    <div class="col-sm-10">
                        <select id="inputOda" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option selected="selected">Alabama</option>
                            <option>Alaska</option>
                            <option>California</option>
                            <option>Delaware</option>
                            <option>Tennessee</option>
                            <option>Texas</option>
                            <option>Washington</option>
                        </select>
                    </div>
                </div>



            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Geri Dön</button>
                <button type="submit" class="btn btn-info pull-right">Odayı Ekle</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>

</section>