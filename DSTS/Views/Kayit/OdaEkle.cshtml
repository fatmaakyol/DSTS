@using DSTS.localClass
@{
    ViewBag.Title = "OdaEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<localpersonel> lp = ViewBag.personeller;
    List<localFakulte> lf = ViewBag.fakulteler;
}

<section class="content-header">
    <h1>
        Oda Ekleme Sayfası

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-home"></i> Anasayfa </a></li>
        <li><a href="#">Kayıt İşlemleri</a></li>
        <li class="active">Oda Kaydı</li>
    </ol>
</section>




<section class="content">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Oda Ekleme</h3>
        </div>

        <form method="post" action="~/Kayit/OdaEkle" class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputOdaAd" class="col-sm-2 control-label">Oda Adı</label>

                   
                    <div class="col-sm-10">
                        <input required="required" maxlength="50" title="En fazla 50 karakter girebilirsiniz."  name="odaAdi" type="text" class="form-control" id="input" placeholder="Oda Adı">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputOdaSorumlu" class="col-sm-2 control-label">Oda Sorumlusu</label>

                    <div class="col-sm-10">
                        <select name="sorumluAdi" id="inputOdaSorumlu" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                           @foreach (localpersonel l in lp)
                           {
                            <option>@l.personelAdi</option>
                           }                                                       
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputFakulte" class="col-sm-2 control-label">Eklenecek fakülte </label>

                    <div class="col-sm-10">
                        <select name="fakulteAdi" id="inputFakulte" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            @foreach (localFakulte l in lf)
                            {
                                <option>@l.fakulteAdi</option>
                            }
                        </select>
                    </div>
                </div>
                



            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Geri Dön</button>
                <button type="submit" class="btn btn-info pull-right">Odayı Ekle</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>

</section>