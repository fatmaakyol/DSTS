@using DSTS.localClass
@{
    ViewBag.Title = "OdaAdinaGoreAra";
    Layout = "~/Views/Shared/_Layout.cshtml";
    localpersonel lp = ViewBag.odaPersonel;
    List<localDemirbas> ld = ViewBag.odaDemirbas;
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box" style="height:100px;">

                <div class="box-header">
                    <h3 class="box-title">Oda Adına Göre Ara </h3>
                </div>

                <div class="box-tools">
                    <form method="post" action="~/Arama/OdaAdinaGoreAra">
                        <div class="input-group" style="width: 1050px;">

                            <input style="width:1000px; height:35px;" type="text" name="odaAdi" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button style="height:35px;" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Personel Adı</th>
                            <th>Demirbaş Kodu</th>
                            <th>Demirbaş Adı</th>
                            <th>Demirbaş Türü</th>
                            <th>Demirbaş Adeti</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (lp != null)
                        {
                                <tr>
                                    <td>@lp.personelAdi</td>
                                </tr>
                        } 
                        @if (ld != null)
                        {
                            foreach (localDemirbas l in ld)
                            {
                                <tr>
                                    <td> </td>
                                    <td>@l.demirbasKod</td>
                                    <td>@l.demirbasAdi</td>
                                    <td>@l.tur</td>
                                    <td>@l.adet</td>
                                </tr>
}
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- /.content -->

@section aramaScript{
    <script src="~/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
  $(function () {
    $('#example1').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
    </script>
}
