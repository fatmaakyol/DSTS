@using DSTS.localClass
@{
    ViewBag.Title = "DemirbasSayisiniArama";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<localDemirbas> ldAd = ViewBag.Ad;
    List<localDemirbas> ldTur = ViewBag.tur;
    List<localDemirbas> ldFiyat = ViewBag.fiyat;
    List<localDemirbas> ldTarih = ViewBag.tarih;
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <form method="post" action="~/Arama/DemirbasSayisiniArama" class="form-horizontal">
                    <div class="form-group">
                        <label for="inputArama" class="col-sm-2 control-label">Arama Türü </label>
                        <div class="col-sm-10">
                            <select name="aranacak" id="inputArama" class="form-control col-sm-10 control-label" style="width: 100%;" tabindex="-1" aria-hidden="true">
                                <option selected="selected">Demirbaş Adına Göre Ara</option>
                                <option>Demirbaş Türüne Göre Ara</option>
                                <option>Demirbaş Fiyatına Göre Ara</option>
                                <option>Demirbaş Alım Tarihine Göre Ara</option>
                            </select>
                        </div>
                    </div>

                    <div class="box-header">
                        <h3 class="box-title">Personel Adına Göre Ara </h3>
                    </div>

                    <div class="box-tools">

                        <div style="width: 200px;">

                            <input style="width:1000px; height:35px;" type="text" name="aranacakDeger" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button style="height:35px;" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                  </div>

                </form>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Demirbaş Kodu</th>
                                <th>Demirbaş Adı</th>
                                <th>Stok Adedi</th>
                                <th>Demirbaş Türü</th>
                                <th>Demirbaş Fiyatı</th>
                                <th>Demirbaş Alım Tarihi</th>
                                <th>Oda Adı</th>
                                <th>Odadaki Adedi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ldAd != null)
                            {
                                foreach (localDemirbas ld in ldAd)
                                {
                                    <tr>
                                        <td>@ld.demirbasKod</td>
                                        <td>@ld.demirbasAdi</td>
                                        <td>@ld.demirbasAdet</td>
                                        <td>@ld.tur</td>
                                        <td>@ld.demirbasFiyat</td>
                                        <td>@ld.demirbasTarih</td>
                                        <td>@ld.odaAdi</td>
                                        <td>@ld.adet</td>
                                    </tr>
}
                            }

                            @if (ldTur != null)
                            {
                                foreach (localDemirbas ld in ldTur)
                                {
                                    <tr>
                                        <td>@ld.demirbasKod</td>
                                        <td>@ld.demirbasAdi</td>
                                        <td>@ld.demirbasAdet</td>
                                        <td>@ld.tur</td>
                                        <td>@ld.demirbasFiyat</td>
                                        <td>@ld.demirbasTarih</td>
                                        <td>@ld.odaAdi</td>
                                        <td>@ld.adet</td>
                                    </tr>
}
                            }

                            @if (ldFiyat != null)
                            {
                                foreach (localDemirbas ld in ldFiyat)
                                {
                                    <tr>
                                        <td>@ld.demirbasKod</td>
                                        <td>@ld.demirbasAdi</td>
                                        <td>@ld.demirbasAdet</td>
                                        <td>@ld.tur</td>
                                        <td>@ld.demirbasFiyat</td>
                                        <td>@ld.demirbasTarih</td>
                                        <td>@ld.odaAdi</td>
                                        <td>@ld.adet</td>
                                    </tr>
}
                            }

                            @if (ldTarih != null)
                            {
                                foreach (localDemirbas ld in ldTarih)
                                {
                                    <tr>
                                        <td>@ld.demirbasKod</td>
                                        <td>@ld.demirbasAdi</td>
                                        <td>@ld.demirbasAdet</td>
                                        <td>@ld.tur</td>
                                        <td>@ld.demirbasFiyat</td>
                                        <td>@ld.demirbasTarih</td>
                                        <td>@ld.odaAdi</td>
                                        <td>@ld.adet</td>
                                    </tr>
}
                            }
                           
                        <tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section aramaScript{
    <script src="~/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
 <script>
  $(function () {
    $('#example1').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
}




