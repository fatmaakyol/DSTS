@using DSTS.localClass
@{
    ViewBag.Title = "PersonelAdı";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<localDemirbas> ld = ViewBag.demirbaslar;
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
               
                    <div class="box-header">
                        <h3 class="box-title">Personel Adına Göre Ara </h3>
                    </div>
               
                    <div class="box-tools">
                        <form method="post" action="~/Arama/PersoneleGoreAra">
                            <div style="width: 200px;">

                                <input style="width:1000px; height:35px;" type="text" name="personelAdi" class="form-control pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button style="height:35px;" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                               
                        </form>
                           </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ld != null)
                            {
                                foreach (localDemirbas l in ld)
                                {
                                    <tr>
                                        <td>@l.demirbasKod</td>
                                        <td>@l.demirbasAdi</td>
                                        <td>@l.demirbasMarka</td>
                                        <td>@l.demirbasModel</td>
                                        <td> @l.demirbasAdet</td>
                                    </tr>}
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- /.content -->

@section aramaScript{
    <script src="~/Content/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
  $(function () {
    $('#example1').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
    </script>
}
